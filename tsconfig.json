{
  "compilerOptions": {
    "outDir": "dist", //输出目录
    "sourceMap": true, 
    "target": "es2016", //目标语法
    "module": "esnext", //模块格式
    "moduleResolution": "node", //模块解析方式
    "strict": false, /* Enable all strict type-checking options. */
    "resolveJsonModule": true, //解析json模块
    "esModuleInterop": true, //允许通过es6语法引入commonjs模块
    "jsx": "preserve", //jsx不转义
    "lib": [
      "esnext",
      "dom"
    ], //支持的类库
    "baseUrl": ".",
    "paths": {
      "@vue/*": ["packages/*/src"] //让vue之间包可以互相引用
    }
  }
}